    <!-- Main Website -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-workout" class="border-shadow">
                    <span class="text-gradient">New Workout <i class="fa-solid fa-dumbbell"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
